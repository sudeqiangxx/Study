<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/test_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_text"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="wrap"
        tools:text="我是测试文本我是测试文本我是测试文本我是测试文本" />

    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/image_iv"
        app:layout_constraintTop_toTopOf="@+id/image_iv"
        app:layout_constraintEnd_toStartOf="@+id/chat_tv"
        tools:text="测试测试测测试测试测测试测"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/chat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="聊天"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_text"
        android:padding="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@+id/image_iv"
        app:layout_constraintBottom_toBottomOf="@+id/image_iv"
        android:layout_marginRight="10dp" />


</androidx.constraintlayout.widget.ConstraintLayout>